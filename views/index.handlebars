<div class="burgerUI container">
  <div class="row">
    <div class="col-md-4">
      <h1 class="text-center">Burger List</h1>
      <ul class="list-group">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li class="list-group-item list-group-item-warning">
              <span class="text-center">
                {{this.id}}. {{this.burger_name}}
                <!--method override to PUT in a form-->
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="id" value="{{this.id}}">
                  <button class="eatIt" type="submit">I'll Eat It!</button>
                </form>
              </span>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div><!--/column-->

    <div class="col-md-4 col-md-offset-2">
        <h1 class="text-center">Devoured</h1>
        <ul class="list-group">
            {{#each burgers}}
            {{#if this.devoured}}
              <li class="list-group-item list-group-item-info">
                  {{this.id}}. {{this.burger_name}}
                <!--method override to Delete in a form-->
                <form action="/{{this.id}}?_method=DELETE" method="POST">
                  <input type="hidden" name="id" value="{{this.id}}">
                  <button class="deleatIt" type="submit">Delete</button>
                </form>
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div><!-- /row -->
  <div class="sumbitRow" style="margin: 20px 0 100px 0;">
    <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h1 class="text-center">Add a burger</h1>
                      <form method="POST" action="/" class="button">
                        <input class="form-control burger_name" type="text" name="burger_name">
                        <button class="submitBurger" type="submit">Save burger!</button>
                      </form>
             </div>
    </div>
  </div>
</div><!-- /container -->
